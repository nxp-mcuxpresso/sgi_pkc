menu "SGI PKC"

config MCUX_COMPONENT_component.sgi_pkc
    bool "SGI PKC"
    select MCUX_COMPONENT_component.sgi_pkc.sgi
    select MCUX_COMPONENT_component.sgi_pkc.pkc
    select MCUX_COMPONENT_component.sgi_pkc.trng
	
	if MCUX_COMPONENT_component.sgi_pkc
	  choice
	    prompt "Target device family - Platform Support"
		config MCUX_COMPONENT_component.sgi_pkc.platform.mcxa
            bool "MCXA"
			depends on MCUX_HW_DEVICE_MCXA266 || MCUX_HW_DEVICE_MCXA366
			
		config MCUX_COMPONENT_component.sgi_pkc.platform.mcxl
            bool "MCXL"
			depends on MCUX_HW_DEVICE_MCXL255
	  endchoice
	endif

